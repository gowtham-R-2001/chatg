<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:background="#ffff00"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/rcUsersImageView"
                android:layout_width="50dp"
                android:layout_height="60dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/rcUsersTextView"
                android:layout_toRightOf="@+id/rcUsersImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Users"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/boldfont"
                android:textColor="#fff"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/recentChatTv"
                android:text="Chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textStyle="normal"
                android:textColor="#fff"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/rcUsersImageView"
                android:layout_below="@+id/rcUsersTextView"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
